{
    "name": "michael_ch/empty-framework-blueprint",
    "description": "Empty framework blueprint v 1.0.0",
    "type": "project",
    "authors": [
        {
            "name": "Michael Christopher Otniel Wijanto",
            "email": "miblue.project@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "UIC\\": "web/UIComponent/",
            "Database\\Entities\\": "database/Entity/",
            "Database\\Repository\\": "database/Repository/",
            "Path\\": "routes/Path/",
            "Path\\View\\": "routes/PathView/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests"
        }
    },
    "require": {
        "php": ">=8.2",
        "vlucas/phpdotenv": "^5.6",
        "doctrine/orm": "^3.2",
        "symfony/cache": "^7.2",
        "doctrine/dbal": "^4.3.0",
        "firebase/php-jwt": "^6.11",
        "ext-openssl": "*",
        "doctrine/migrations": "^3.9.1",
        "monolog/monolog": "^3.9",
        "predis/predis": "^3.2",
        "guzzlehttp/guzzle": "^7.10"
    },
    "require-dev": {
        "phpunit/phpunit": "11.5.21"
    },
    "scripts": {
        "post-install-cmd": [
            "@config:cache"
        ],
        "config:cache": "php michael_ch/core/src/implementation/config_cache.php",
        "config:clear": "php michael_ch/core/src/implementation/config_cache_clear.php",
        "migrations:diff": "./vendor/bin/doctrine-migrations migrations:diff",
        "migrations:status": "./vendor/bin/doctrine-migrations migrations:status",
        "migrations:migrate": "./vendor/bin/doctrine-migrations migrate",
        "migrations:migrate-naon": "./vendor/bin/doctrine-migrations migrate --no-all-or-nothing"
    }
}
